# Server
PIPELINE_MODE=full
NODE_ENV=development
PORT=8089
LOG_LEVEL=info

# Postgres
# Connect to Supabase via connection pooling (PgBouncer)
# Replace [YOUR-PASSWORD] or set DB_PASSWORD below.
DATABASE_URL=postgresql://postgres.scrksfxnkxmvvdzwmqnc:[YOUR-PASSWORD]@aws-1-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true

# Direct connection (recommended for migrations)
DIRECT_URL=postgresql://postgres.scrksfxnkxmvvdzwmqnc:[YOUR-PASSWORD]@aws-1-us-east-1.pooler.supabase.com:5432/postgres

# Optionally provide password separately instead of embedding in URLs
DB_PASSWORD=

# Supabase requires TLS
PGSSLMODE=require

# Workers
ASR_WORKER_URL=http://localhost:8091
TTS_WORKER_URL=http://localhost:8092

# If TTS worker is unavailable, return silent WAV instead of failing.
TTS_FALLBACK=silent

# LLM (vLLM OpenAI-compatible or TGI)
# Use stub if you don't have an LLM server running locally.
LLM_PROVIDER=stub
LLM_BASE_URL=http://localhost:8000
LLM_API_KEY=
LLM_MODEL=meta-llama/Meta-Llama-3-8B-Instruct
LLM_TEMPERATURE=0.4
LLM_MAX_TOKENS=256

# Audio
AUDIO_SAMPLE_RATE=16000
